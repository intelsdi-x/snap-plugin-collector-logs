{
    "version": 1,
    "schedule": {
        "type": "simple",
        "interval": "3s"
    },
    "workflow": {
        "collect": {
            "metrics": {
                "/intel/logs/*": {}
            },
            "config": {
                "/intel/logs": {
                    "metric_name": "nova_logs",
                    "cache_dir": "/home/test/cache/snap",
                    "log_dir": "/home/test/kolla/(nova|neutron)",
                    "log_file": ".*",
                    "splitter_type": "date-time",
                    "splitter_pos": "before",
                    "collection_time": "2s",
                    "metrics_limit": 1000
                }
            },
            "publish": [
                {
                    "plugin_name": "file",
                    "config": {
                        "file": "/tmp/published_logs"
                    }
                }
            ]
        }
    }
}
